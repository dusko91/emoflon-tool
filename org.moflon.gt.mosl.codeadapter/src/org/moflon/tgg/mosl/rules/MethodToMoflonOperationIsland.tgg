#using org.moflon.gt.mosl.codeadapter.*
#using AttrCondDefLibrary.*

#rule MethodToMoflonOperationIsland #with org.moflon.gt.mosl.codeadapter

#source { 
	
	++ method : MethodDec
}

#target {
	
	++ operation : MoflonOperation{
		++ - rootScope -> scope
	}
	
	++ scope : democles.Scope
}

#correspondence {
	
	 ++ methodToOperation : MethodDecToMoflonOperation {
		#src->method
		#trg->operation
	}
	
}

#attributeConditions {
	eq(method.name, operation.name)
}
